<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="container-fluid">
  <div class="row">
    <% cache(@products) do %>
      <% @products.each do |product| %>
        <div class="col-sm-2 col-md-4">
         <% cache(product) do %>
          <%= render partial: "product", locals: {product: product} %>
         <% end %>
        </div><!-- col div -->
      <% end %>
    <% end %> 
  </div><!-- row div -->
</div><!--container div -->  

<%= link_to 'New Product', new_product_path %>